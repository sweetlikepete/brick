{
  "name": "@sweetlikepete/brick",
  "version": "1.0.1",
  "description": "Collection of tools, presets and shared configs for @sweetlikepete's projects",
  "main": "lib/index",
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf lib && npm run build:script",
    "build:script": "npm run build:script:module && npm run build:script:common",
    "build:script:common": "babel src --out-dir lib --extensions '.js,.ts'",
    "build:script:module": "BUILD_MJS=1 npm run build:script:common && renamer --find js --replace mjs lib/**",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sweetlikepete/brick.git"
  },
  "author": "Peter Bodechtel (https://www.sweetlikepete.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sweetlikepete/brick/issues"
  },
  "homepage": "https://github.com/sweetlikepete/brick/tree/master/packages/babel-preset#readme",
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@sweetlikepete/babel-preset": "^1.0.6",
    "@sweetlikepete/eslint-config": "^1.0.15",
    "@sweetlikepete/stylelint-config": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "@typescript-eslint/parser": "^1.3.0",
    "eslint": "^5.14.1",
    "eslint-plugin-array-func": "^3.1.3",
    "eslint-plugin-compat": "^2.7.0",
    "eslint-plugin-eslint-comments": "^3.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-optimize-regex": "^1.1.6",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^7.1.0",
    "stylelint": "^9.10.1",
    "stylelint-cli": "^1.0.0",
    "stylelint-order": "^2.0.0",
    "stylelint-scss": "^3.5.3",
    "typescript": "^3.3.3"
  },
  "devDependencies": {
    "renamer": "^1.1.1"
  }
}
