{
  "name": "@sweetlikepete/scotch",
  "version": "1.0.1",
  "description": "Node.js SSR application framework",
  "main": "lib",
  "types": "lib",
  "scripts": {
    "build": "rm -rf lib && npm run build:script && npm run build:types && npm run build:static",
    "build:script": "npm run build:script:module && npm run build:script:common",
    "build:script:common": "babel src --ignore src/cli --out-dir lib --extensions '.js,.ts'",
    "build:script:module": "BUILD_MJS=1 npm run build:script:common && renamer --find js --replace mjs \"lib/**\"",
    "build:static": "cp -R src/static lib/static",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "eslint src test --ext .js,.jsx,.ts,.tsx",
    "prelint": "npm run build",
    "prepublishOnly": "npm run test",
    "pretest": "npm run lint",
    "test": "babel-tape-runner ./test/*.js"
  },
  "browserslist": "node 8",
  "engines": {
    "node": ">= 8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sweetlikepete/brick.git"
  },
  "author": "Peter Bodechtel (https://www.sweetlikepete.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sweetlikepete/brick/issues"
  },
  "homepage": "https://github.com/sweetlikepete/brick/tree/master/packages/scotch#readme",
  "devDependencies": {
    "@sweetlikepete/babel": "^1.0.3",
    "@sweetlikepete/eslint": "^1.0.7",
    "@types/webpack": "^4.4.27",
    "@types/webpack-dev-middleware": "^2.0.2",
    "babel-tape-runner": "^3.0.0",
    "renamer": "^1.1.1",
    "tape": "^4.10.1"
  },
  "dependencies": {
    "@types/compression": "^0.0.36",
    "@types/express": "^4.16.1",
    "@types/webpack-hot-middleware": "^2.16.5",
    "compression": "^1.7.4",
    "express": "^4.16.4",
    "webpack": "^4.29.6",
    "webpack-dev-middleware": "^3.6.2",
    "webpack-hot-middleware": "^2.24.3"
  }
}
